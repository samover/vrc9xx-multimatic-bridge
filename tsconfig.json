{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "logger": ["src/logger"],
      "lambda-core": ["src/lambda-core"],
      "errors": ["src/errors"],
      "url-builder": ["src/url-builder"],
      "security": ["src/security"],
      "utils": ["src/utils"],
      "openid": ["src/openid"],
      "class-validator-wrapper": ["src/class-validator-wrapper"]
    }
  },
  "exclude": [ "node_modules" ],
  "include": ["src/*"]
}
