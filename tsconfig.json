{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "logger": ["modules/logger"],
      "lambda-core": ["modules/lambda-core"],
      "errors": ["modules/errors"],
      "url-builder": ["modules/url-builder"],
      "security": ["modules/security"],
      "utils": ["modules/utils"],
      "openid": ["modules/openid"],
      "class-validator-wrapper": ["modules/class-validator-wrapper"],
      "vaillant-api": ["modules/vaillant-api"],
      "dynamodb": ["modules/dynamodb"],
      "models": ["modules/models"]
    }
  },
  "exclude": [ "node_modules" ],
  "include": ["./functions/**/*", "./modules/**/*"]
}
